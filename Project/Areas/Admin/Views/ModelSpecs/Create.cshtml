@model ProjectData.Models.ModelSpec

@{
    ViewData["Title"] = "新增規格";
}

<h1> @ViewData["Title"] </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductModelID" class="control-label"></label>
                <select asp-for="ProductModelID" class ="form-control" asp-items="ViewBag.ProductModelID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Spec" class="control-label"></label>
                <input asp-for="Spec" class="form-control" />
                <span asp-validation-for="Spec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecValue" class="control-label"></label>
                <input asp-for="SpecValue" class="form-control" />
                <span asp-validation-for="SpecValue" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="新增" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">返回列表</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
