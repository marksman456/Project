@model Project.ViewModels.VMProduct.ProductEditViewModel

@{
    ViewData["Title"] = "編輯商品";
}

<h1 class="display-5 text-center">@ViewData["Title"]</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-10">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <input type="hidden" asp-for="ExistingImagePath"/>
          

            <div class="row">
               
                <div class="col-md-7">
                    <div class="form-group mb-3">
                        <label asp-for="ProductSKU" class="control-label"></label>
                        <input asp-for="ProductSKU" class="form-control" />
                        <span asp-validation-for="ProductSKU" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ProductModelID" class="control-label"></label>
                        <select asp-for="ProductModelID" class="form-control" asp-items="Model.ProductModelList"></select>
                        <span asp-validation-for="ProductModelID" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                
                <div class="col-md-5">
                    <div class="form-group mb-3">
                        <label class="control-label">更換圖片</label>
                        <input asp-for="ProductImageFile" type ="file"  id="formFile" class="form-control" />
                    </div>
                    <div class="text-center">
                       
                            <img id="imagePreview" src="" class="img-fluid rounded shadow-sm" style="max-height: 250px;" />
                       
                    </div>
                  
                </div>
            </div>

            <div class="form-group mt-4 text-center">
                <input type="submit" value="儲存變更" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">返回列表</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#formFile').on('change', function (event) {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        var img = $('#imagePreview');
                        img.attr('src', e.target.result).show();
                    };
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });
    </script>
}