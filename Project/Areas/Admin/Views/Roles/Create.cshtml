@model string

@{
    ViewData["Title"] = "新增角色";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @* 顯示所有驗證錯誤訊息 *@
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label for="roleName" class="control-label">角色名稱</label>
                <input name="roleName" class="form-control" value="@Model" />
            </div>

            <div class="form-group">
                <input type="submit" value="建立" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">取消</a>
            </div>
        </form>
    </div>
</div>