@model ProjectData.Models.ProductModel

@{
    ViewData["Title"] = "詳細";
}

<h1> @ViewData["Title"]</h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductModelName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductModelName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductModelID" class="btn btn-sm btn-outline-primary">編輯</a>
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">回到首頁</a>
</div>
