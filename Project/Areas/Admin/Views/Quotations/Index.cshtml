@model IEnumerable<Project.ViewModels.Quotation.QuotationViewModel>

@{
    ViewData["Title"] = "報價單列表";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">新增報價單</a>
</p>
<table class="table table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuotationNumber)
            </th>
            <th>
                @* 修改：顯示客戶姓名 *@
                @Html.DisplayNameFor(model => model.MemberName)
            </th>
            <th>
                @* 修改：顯示負責員工姓名 *@
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th class="text-end">總金額</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuotationNumber)
                </td>
                <td>
                    @* 修改：顯示客戶姓名 *@
                    @Html.DisplayFor(modelItem => item.MemberName)
                </td>
                <td>
                    @* 修改：顯示負責員工姓名 *@
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @* 將日期格式化為 yyyy-MM-dd *@
                    @item.QuoteDate.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
             <td class="text-end">
                @($"NT${item.QuotationDetail.Sum(d => d.Price * d.Quantity * (d.Discount ?? 1.0m)):N0}")
            </td>
                <td class="d-flex">
                    <a asp-action="Details" asp-route-id="@item.QuotationID" class="btn btn-sm btn-outline-info">詳細</a>
                    @if (item.Status == "報價中")
                    {
                        <form asp-action="Void" asp-route-id="@item.QuotationID" method="post" class="d-inline" onsubmit="return confirm('您確定要作廢這張報價單嗎？');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">作廢</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>