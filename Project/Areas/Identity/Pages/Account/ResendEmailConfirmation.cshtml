@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "重新發送電子郵件驗證";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">
                        <i class="bi bi-envelope-check-fill text-primary me-2"></i>
                        重新發送驗證信
                    </h2>
                    <p class="text-center text-muted mb-4">請輸入您的電子郵件地址，我們將重新發送驗證信給您。</p>
                    <form method="post" novalidate>
                        <div asp-validation-summary="All" class="alert alert-danger py-2" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary">
                            <i class="bi bi-send me-2"></i>重新發送
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
