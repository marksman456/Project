@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "重設密碼成功";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h1 class="card-title mb-4 text-success">
                        <i class="bi bi-check-circle-fill"></i> @ViewData["Title"]
                    </h1>
                    <p class="mb-4">
                        您的密碼已成功重設。請
                        <a asp-page="./Login" class="btn btn-primary ms-2">點此登入</a>。
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
