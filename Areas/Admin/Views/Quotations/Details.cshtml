@model Project.Models.Quotation

@{
    ViewData["Title"] = "報價單詳細資料";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h2 class="mb-0">@ViewData["Title"]</h2>
            <h4 class="mb-0 text-muted">@Model.QuotationNumber</h4>
        </div>

        @* --- 主檔資訊 --- *@
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">客戶名稱</dt>
                <dd class="col-sm-4">@Model.Member.Name</dd>

                <dt class="col-sm-2">負責員工</dt>
                <dd class="col-sm-4">@Model.Employee.Name</dd>

                <dt class="col-sm-2">報價日期</dt>
                <dd class="col-sm-4">@Model.QuoteDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-2">狀態</dt>
                <dd class="col-sm-4">@Model.Status</dd>
            </dl>
        </div>

        <hr class="my-0" />

        @* --- 明細資訊 --- *@
        <div class="card-body">
            <h5 class="card-title">報價品項</h5>
            <table class="table table-striped table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>商品 SKU</th>
                        <th>商品名稱</th>
                        <th>描述</th> @* 新增規格欄位 *@
                        <th class="text-end">單價</th>
                        <th class="text-center">数量</th>
                        <th class="text-end">小計</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.QuotationDetail)
                    {
                        <tr>
                            @* 【修正】路徑改為 item.ProductDetail.Product.* *@
                            <td>@item.ProductDetail.Product.ProductSKU</td>
                            <td>@item.ProductDetail.Product.ProductName</td>
                            <td>@item.ProductDetail.Product.Description</td> @* 顯示 ProductDetail 的 *@
                            <td class="text-end">@item.Price.ToString("N0")</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@((item.Price * item.Quantity).ToString("N0"))</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="fw-bold">
                        <td colspan="5" class="text-end h5">總計金額：</td>
                        @{
                            decimal grandTotal = Model.QuotationDetail.Sum(item => item.Price * item.Quantity);
                        }
                        <td class="text-end h5 text-danger">@grandTotal.ToString("C0")</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.QuotationID" class="btn btn-primary">編輯</a>
            <a asp-action="Index" class="btn btn-secondary">返回列表</a>

        </div>
    </div>
</div>