@model ProjectData.Models.Product

@{
    ViewData["Title"] = "商品詳細資料";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h2 class="text-center mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div class="row">

                @* --- 左半邊：商品圖片 --- *@
                <div class="col-md-5 text-center">
                    @if (!string.IsNullOrEmpty(Model.ProductImage))
                    {
                        <img src="~/Photos/products/@Model.ProductImage" class="img-fluid rounded" alt="@Model.ProductName" style="max-height: 400px;" />
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center" style="height: 400px; background-color: #f8f9fa; border: 1px dashed #ccc; border-radius: 5px;">
                            <span class="text-muted">尚無圖片</span>
                        </div>
                    }
                </div>

                @* --- 右半邊：商品資訊 --- *@
                <div class="col-md-7">
                    <h3 class="display-6">@Html.DisplayFor(model => model.ProductName)</h3>
                    <p class="lead text-muted">@Html.DisplayFor(model => model.ProductSKU)</p>

                    <div class="my-4">
                        <span class="display-4 text-danger">@Model.Price.ToString("C0")</span>
                    </div>

                    <dl class="row mt-4">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProductModel.ProductModelName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductModel.ProductModelName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProductModel.Brand)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductModel.Brand)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Description)</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Html.DisplayFor(model => model.Description)
                            }
                            else
                            {
                                <span class="text-muted">--</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-primary">編輯商品</a>
            <a asp-action="Index" class="btn btn-secondary">返回列表</a>
        </div>
    </div>
</div>