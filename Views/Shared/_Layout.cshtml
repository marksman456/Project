@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.3/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">儀錶板</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User)){
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                後台管理
                            </a>
                            <ul class="dropdown-menu">
                                @* ========== 銷售與營運 (所有後台人員可見) ========== *@
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">儀表板</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Quotations" asp-action="Index">報價單管理</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Orders" asp-action="Index">訂單管理</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Members" asp-action="Index">客戶管理</a></li>

                                @* ========== 核心系統管理 (僅限 Admin 可見) ========== *@
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">進階管理</h6></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="ProductDetails" asp-action="Index">庫存管理 (進貨)</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Products" asp-action="Index">產品主檔管理</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Index">使用者管理</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Roles" asp-action="Index">角色管理</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Employees" asp-action="Index">員工管理</a></li>
                                }
                            </ul>
                        </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()



            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
